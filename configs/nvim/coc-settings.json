{ "coc.preferences.formatOnSaveFiletypes" : [ "python" ]

, "codeLens.enable" : true

, "diagnostic.errorSign"           : ""
, "diagnostic.warningSign"         : ""
, "diagnostic.infoSign"            : ""
, "diagnostic.hintSign"            : ""
, "diagnostic.refreshOnInsertMode" : false
, "diagnostic.maxWindowHeight"     : 20

, "list.indicator"          : "->>"
, "list.extendedSearchMode" : true
, "list.maxHeight"          : 20
, "list.previewSplitRight"  : true
, "list.selectedSignText"   : ""
, "list.insertMappings" :
  { "<Down>" : "do:next"
  , "<Up>"   : "do:previous"
  }
, "list.normalMappings" :
  { "p" : "action:preview"
  , "q" : "action:quickfix"
  , "s" : "action:split"
  , "d" : "action:delete"
  , "v" : "action:vsplit"
  , "t" : "action:tabe"
  , "D" : "action:drop"
  , "*" : "do:selectall"
  , "?" : "do:help"
  }

, "suggest.detailField"              : "menu"
, "suggest.enablePreview"            : true
, "suggest.snippetIndicator"         : ""
, "suggest.completionItemKindLabels" :
  { "method"        : ""
  , "default"       : ""
  , "enum"          : ""
  , "property"      : ""
  , "enumMember"    : ""
  , "text"          : ""
  , "color"         : ""
  , "file"          : ""
  , "typeParameter" : ""
  , "snippet"       : ""
  , "event"         : "鬒"
  , "unit"          : ""
  , "function"      : "ƒ"
  , "keyword"       : ""
  , "reference"     : "渚"
  , "folder"        : ""
  , "variable"      : ""
  , "value"         : ""
  , "constant"      : ""
  , "field"         : "料"
  , "module"        : ""
  , "interface"     : ""
  , "class"         : ""
  , "operator"      : "Ψ"
  , "struct"        : "פּ"
  }

, "languageserver" :
  { "ccls" :
    { "command"               : "ccls"
    , "filetypes"             : [ "c", "cpp", "objc", "objcpp" ]
    , "rootPatterns"          : [ ".ccls", "compile_commands.json", ".git/" ]
    , "initializationOptions" : {}
    }
  , "haskell" :
    { "command"                 : "hie-wrapper"
    , "args"                    : [ "--lsp" ]
    , "filetypes"               : [ "hs", "lhs", "haskell" ]
    , "rootPatterns"            : [ "*.cabal", "stack.yaml", "cabal.project", "package.yaml" ]
    , "initializationOptions"   :
      { "languageServerHaskell" : {}
      }
    }
  , "purescript" :
    { "command"               : "npx"
    , "args"                  : [ "purescript-language-server", "--stdio" ]
    , "filetypes"             : [ "purescript"]
    , "rootPatterns"          : [ "bower.json", "psc-package.json", "spago.dhall" ]
    , "initializationOptions" :
      { "addNpmPath"     : true
      , "addSpagoSources": true
      , "buildCommand"   : "spago build --purs-args --json-errors"
      }
    }
  , "nix" :
    { "command"               : "rnix-lsp"
    , "filetypes"             : [ "nix" ]
    , "initializationOptions" : {}
    }
  }

, "eslint.filetypes": [ "javascript", "typescript" ]

, "git.branchCharacter"           : ""
, "git.addedSign.hlGroup"         : "GitGutterAdd"
, "git.addedSign.text"            : "┃"
, "git.changedSign.hlGroup"       : "GitGutterChange"
, "git.changedSign.text"          : "┃"
, "git.changeRemovedSign.hlGroup" : "GitGutterChangeDelete"
, "git.changeRemovedSign.text"    : "≃"
, "git.removedSign.hlGroup"       : "GitGutterDelete"
, "git.removedSign.text"          : "_"
, "git.topRemovedSign.hlGroup"    : "GitGutterDelete"
, "git.topRemovedSign.text"       : "‾"

, "markdownlint.config":
  { "default"            : true
  , "line-length"        : false
  , "no-multiple-blanks" : false
  }

, "python.jediEnabled"                      : false
, "python.formatting.provider"              : "yapf"
, "python.formatting.yapfArgs"              : [ "--style", "{ column_limit : 100 }" ]
, "python.linting.pylintEnabled"            : true
, "python.linting.pylintUseMinimalCheckers" : false
, "python.linting.mypyEnabled"              : true

, "vimlsp.indexes.count"           : 8
, "vimlsp.suggest.fromRuntimepath" : true
}
